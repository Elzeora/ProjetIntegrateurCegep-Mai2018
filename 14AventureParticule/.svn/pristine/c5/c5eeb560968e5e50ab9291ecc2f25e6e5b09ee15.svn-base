package ressources;

import java.util.EventListener;

/**
 * 
 * @author Louis
 *
 */
public interface PanelZMListener  extends EventListener {
	
	
	/**
	 * permet de changer la direction du champ magnétique  de la zone magnétique
	 * @param direction true champ magnétique sortant , false champ magnétique entrant 
	 */
	public void changerDirectionZM(boolean direction);
	/**
	 * permet de changer la valeur du champ magnétique de la zone mangétique
	 * @param valeur la valeur du champ magnétique
	 */
	public void changerChampMagnetiqueZM(double valeur);

}
